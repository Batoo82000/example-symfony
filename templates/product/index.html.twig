{% extends 'base.html.twig' %}

{% block title %}Nos produits | La boutique Fran√ßaise{% endblock %}

{% block content %}
<h1>Nos Produits</h1>
    <div class="row">
        <div class="col-md-3">
            <h3>Filtrer</h3>
            {{ form(form) }}
        </div>
        <div class="col-md-9">
            <div class="row product-container">
                {% for product in products %}
                    <div class="col-md-4 mt-5">
                        <div class="product-item text-center">
                            <a href="{{ path('product', {'slug' : product.slug}) }}"> <img src="/assets/images/products-images/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"></a>
                            <h5> {{ product.name }}</h5>
                            <span class="product-subtitle"> {{ product.subtitle }}</span>
                            <span class="product-price">{{ (product.price/100) | format_currency('EUR') | number_format(2, ',') }}</span>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>



{% endblock %}